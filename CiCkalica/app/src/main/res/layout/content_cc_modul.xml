<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="studnetsproject.air.foi.cickalica.cc_modul"
    tools:showIn="@layout/activity_cc_modul">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="nickTxt"
        android:id="@+id/nickTxt"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="scoreTxt"
        android:id="@+id/scoreTxt"
        android:layout_below="@+id/nickTxt"
        android:layout_alignRight="@+id/nickTxt"
        android:layout_alignEnd="@+id/nickTxt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rijecTxt"
        android:id="@+id/rijecTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:textSize="35dp"
        android:layout_below="@+id/scoreTxt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Č"
        android:id="@+id/ČTxt"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/rijecTxt"
        android:layout_toStartOf="@+id/rijecTxt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ć"
        android:id="@+id/ĆTxt"
        android:layout_alignBottom="@+id/ČTxt"
        android:layout_toRightOf="@+id/rijecTxt"
        android:layout_toEndOf="@+id/rijecTxt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/nextBtn"
        android:layout_below="@+id/ČTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:indeterminate="false"
        android:layout_below="@+id/scoreTxt"
        android:layout_alignLeft="@+id/rijecTxt"
        android:layout_alignStart="@+id/rijecTxt"
        android:layout_toLeftOf="@+id/ĆTxt"
        android:layout_toStartOf="@+id/ĆTxt" />
</RelativeLayout>
